@model IEnumerable<Slider>
@{
    ViewData["Title"] = "Index";

}

<div class="container-fluid my-3 mx-3">
    <div class="table-responsive pt-3">
        <div class="create-btn">
            <a asp-area="AdminArea" asp-controller="Slider" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                      Image
                    </th>
                    <th style="text-align:center">
                        Settings
                    </th>
                   
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            <img src="~/img/@item.Image" alt="slider" />
                        </td>


                        <td style="text-align:center">
                            <button type="button" class="btn btn-info"><i class="mdi mdi-information mx-0"></i></button>
                            <button type="button" class="btn btn-primary"><i class="mdi mdi-table-edit"></i></button>
                            <button type="button" class="btn btn-danger"> <i class="mdi mdi-delete-forever"></i></button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

